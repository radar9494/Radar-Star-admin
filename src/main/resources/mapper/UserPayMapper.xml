<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liuqi.business.mapper.UserPayMapper">

	<!-- 常用查询 -->
	<sql id="allColumn">
		<trim suffixOverrides=",">
			t.id,t.create_time,t.update_time,t.remark,t.version,t.user_id,t.pay_type,t.name,t.no,t.bank_address,t.bank_name,t.pic,t.status,
		</trim>
	</sql>

    <!-- 数据库和实体映射  对应数据库实体-->
	<resultMap type="userPayModel" id="userPay">
		<result property="id" column="id"/>
		<result property="createTime" column="create_time"/>
		<result property="updateTime" column="update_time"/>
		<result property="remark" column="remark"/>
		<result property="version" column="version"/>
		<result property="userId" column="user_id"/>
		<result property="payType" column="pay_type"/>
		<result property="name" column="name"/>
		<result property="no" column="no"/>
		<result property="bankAddress" column="bank_address"/>
		<result property="bankName" column="bank_name"/>
		<result property="pic" column="pic"/>
		<result property="status" column="status"/>
	</resultMap>

	<!-- dto映射  添加的字段放在这块-->
    <resultMap type="userPayModelDto" extends="userPay" id="userPayDto">
    </resultMap>

	<!-- 新增 -->
	<insert id="insert" keyColumn="id" keyProperty="id" useGeneratedKeys="true" parameterType="userPayModel">
		insert into t_user_pay(
		<trim  suffixOverrides=",">
				<if test="createTime != null">`create_time`,</if>
				<if test="updateTime != null">`update_time`,</if>
				<if test="remark != null">`remark`,</if>
				<if test="version != null">`version`,</if>
				<if test="userId != null">`user_id`,</if>
				<if test="payType != null">`pay_type`,</if>
				<if test="name != null">`name`,</if>
				<if test="no != null">`no`,</if>
				<if test="bankAddress != null">`bank_address`,</if>
				<if test="bankName != null">`bank_name`,</if>
				<if test="pic != null">`pic`,</if>
				<if test="status != null">`status`,</if>
		
		</trim>
		) values(
		<trim suffixOverrides=",">
				<if test="createTime != null">#{createTime},</if>
				<if test="updateTime != null">#{updateTime},</if>
				<if test="remark != null">#{remark},</if>
				<if test="version != null">#{version},</if>
				<if test="userId != null">#{userId},</if>
				<if test="payType != null">#{payType},</if>
				<if test="name != null">#{name},</if>
				<if test="no != null">#{no},</if>
				<if test="bankAddress != null">#{bankAddress},</if>
				<if test="bankName != null">#{bankName},</if>
				<if test="pic != null">#{pic},</if>
				<if test="status != null">#{status},</if>
		
		</trim>
		)
	</insert>

	<!-- 更新 -->
	<update id="update" parameterType="userPayModel">
		update  t_user_pay
		<set>
            <if test="createTime != null">
                    `create_time` = #{createTime},
            </if>
            <if test="updateTime != null">
                    `update_time` = #{updateTime},
            </if>
            <if test="remark != null">
                    `remark` = #{remark},
            </if>
            <if test="version != null">
                    `version` = #{version},
            </if>
            <if test="userId != null">
                    `user_id` = #{userId},
            </if>
            <if test="payType != null">
                    `pay_type` = #{payType},
            </if>
            <if test="name != null">
                    `name` = #{name},
            </if>
            <if test="no != null">
                    `no` = #{no},
            </if>
            <if test="bankAddress != null">
                    `bank_address` = #{bankAddress},
            </if>
            <if test="bankName != null">
                    `bank_name` = #{bankName},
            </if>
            <if test="pic != null">
                    `pic` = #{pic},
            </if>
            <if test="status != null">
                    `status` = #{status},
            </if>
		</set>
		where id = #{id}
	</update>


	<!-- 查询 -->
	<select id="getById" resultMap="userPayDto">
		select <include refid="allColumn"></include> 
		from  t_user_pay t 
		where t.id = #{id}
	</select>
	<!-- 查询 -->
	<select id="getByIds" resultMap="userPayDto">
		select <include refid="allColumn"></include> 
		from  t_user_pay t 
		where  t.id in
		<foreach collection="list" item="item" open="(" close=")" separator=",">
			#{item}
		</foreach>
	</select>


    <!-- 优化查询count -->
    <select id="queryList_COUNT" parameterType="userPayModelDto" resultType="Long">
        select count(t.id)
        <include refid="queryList_base"></include>
    </select>

	<!-- 查询列表 -->
	<select id="queryList" parameterType="userPayModelDto" resultMap="userPayDto">
		select <include refid="allColumn"></include>
        <include refid="queryList_base"></include>
		<!-- 排序 -->
		<if test="sortName != null and sortName!=''">
			order by t.${sortName}
            <if test="sortType != null and sortType!=''">
                 ${sortType}
            </if>
		</if>
	</select>

    <!-- base基础查询 -->
	<sql id="queryList_base">
        from  t_user_pay t
        <trim prefix="where" prefixOverrides="AND|OR">
			<if test="id != null    and id &gt; -2 ">
				AND t.id = #{id}
            </if>
	
			<if test="createTime != null   ">
				AND t.create_time = #{createTime}
            </if>
	
			<if test="updateTime != null   ">
				AND t.update_time = #{updateTime}
            </if>
	
			<if test="remark != null and  remark != ''   ">
				AND t.remark = #{remark}
            </if>
	
			<if test="version != null    and version &gt; -2 ">
				AND t.version = #{version}
            </if>
	
			<if test="userId != null    and userId &gt; -2 ">
				AND t.user_id = #{userId}
            </if>
	
			<if test="payType != null    and payType &gt; -2 ">
				AND t.pay_type = #{payType}
            </if>
	
			<if test="name != null and  name != ''   ">
				AND t.name = #{name}
            </if>
	
			<if test="no != null and  no != ''   ">
				AND t.no = #{no}
            </if>
	
			<if test="bankAddress != null and  bankAddress != ''   ">
				AND t.bank_address = #{bankAddress}
            </if>
	
			<if test="bankName != null and  bankName != ''   ">
				AND t.bank_name = #{bankName}
            </if>
	
			<if test="pic != null and  pic != ''   ">
				AND t.pic = #{pic}
            </if>
	
			<if test="status != null    and status &gt; -2 ">
				AND t.status = #{status}
            </if>

			<if test="startCreateTime!=null">
				and t.create_time>#{startCreateTime}
			</if>
			<if test="endCreateTime!=null">
				<![CDATA[and t.create_time<=#{endCreateTime}]]>
			</if>
        </trim>
	</sql>

</mapper>