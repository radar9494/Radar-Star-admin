<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liuqi.business.mapper.MiningIncomeLogMapper">

    <!-- 常用查询 -->
    <sql id="allColumn">
        <trim suffixOverrides=",">
            t.id,t.create_time,t.update_time,t.remark,t.version,t.user_id,t.num,t.type,t.currency_id,t.currency_name,t.date
        </trim>
    </sql>

    <!-- 数据库和实体映射  对应数据库实体-->
    <resultMap type="miningIncomeLogModel" id="miningIncomeLog">
        <result property="id" column="id"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="remark" column="remark"/>
        <result property="version" column="version"/>
        <result property="userId" column="user_id"/>
        <result property="num" column="num"/>
        <result property="type" column="type"/>
        <result property="currencyId" column="currency_id"/>
        <result property="currencyName" column="currency_name"/>
        <result property="date" column="date"/>
    </resultMap>

    <!-- dto映射  添加的字段放在这块-->
    <resultMap type="miningIncomeLogModelDto" extends="miningIncomeLog" id="miningIncomeLogDto">
    </resultMap>

    <!-- 新增 -->
    <insert id="insert" keyColumn="id" keyProperty="id" useGeneratedKeys="true" parameterType="miningIncomeLogModel">
        insert into t_mining_income_log(
        <trim suffixOverrides=",">
            <if test="createTime != null">`create_time`,</if>
            <if test="updateTime != null">`update_time`,</if>
            <if test="remark != null">`remark`,</if>
            <if test="version != null">`version`,</if>
            <if test="userId != null">`user_id`,</if>
            <if test="num != null">`num`,</if>
            <if test="type != null">`type`,</if>
            <if test="currencyId != null">`currency_id`,</if>
            <if test="currencyName != null">`currency_name`,</if>
            <if test="date != null">`date`,</if>

        </trim>
        ) values(
        <trim suffixOverrides=",">
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
            <if test="version != null">#{version},</if>
            <if test="userId != null">#{userId},</if>
            <if test="num != null">#{num},</if>
            <if test="type != null">#{type},</if>
            <if test="currencyId != null">#{currencyId},</if>
            <if test="currencyName != null">#{currencyName},</if>
            <if test="date != null">#{date},</if>

        </trim>
        )
    </insert>

    <!-- 更新 -->
    <update id="update" parameterType="miningIncomeLogModel">
        update t_mining_income_log
        <set>
            <if test="createTime != null">
                `create_time` = #{createTime},
            </if>
            <if test="updateTime != null">
                `update_time` = #{updateTime},
            </if>
            <if test="remark != null">
                `remark` = #{remark},
            </if>
            <if test="version != null">
                `version` = #{version},
            </if>
            <if test="userId != null">
                `user_id` = #{userId},
            </if>
            <if test="num != null">
                `num` = #{num},
            </if>
            <if test="type != null">
                `type` = #{type},
            </if>
            <if test="currencyId != null">
                `currency_id` = #{currencyId},
            </if>
            <if test="currencyName != null">
                `currency_name` = #{currencyName},
            </if>
            <if test="date != null">
                `date` = #{date},
            </if>
        </set>
        where id = #{id}
    </update>


    <!-- 查询 -->
    <select id="getById" resultMap="miningIncomeLogDto">
        select
        <include refid="allColumn"></include>
        from t_mining_income_log t
        where t.id = #{id}
    </select>
    <!-- 查询 -->
    <select id="getByIds" resultMap="miningIncomeLogDto">
        select
        <include refid="allColumn"></include>
        from t_mining_income_log t
        where t.id in
        <foreach collection="list" item="item" open="(" close=")" separator=",">
            #{item}
        </foreach>
    </select>


    <!-- 优化查询count -->
    <select id="queryList_COUNT" parameterType="miningIncomeLogModelDto" resultType="Long">
        select count(t.id)
        <include refid="queryList_base"></include>
    </select>

    <!-- 查询列表 -->
    <select id="queryList" parameterType="miningIncomeLogModelDto" resultMap="miningIncomeLogDto">
        select
        <include refid="allColumn"></include>
        <include refid="queryList_base"></include>
        <!-- 排序 -->
        <if test="sortName != null and sortName!=''">
            order by t.${sortName}
            <if test="sortType != null and sortType!=''">
                ${sortType}
            </if>
        </if>
    </select>

    <!-- base基础查询 -->
    <sql id="queryList_base">
        from t_mining_income_log t
        <trim prefix="where" prefixOverrides="AND|OR">
            <if test="id != null and  id != ''   ">
                AND t.id = #{id}
            </if>

            <if test="createTime != null and  createTime != ''   ">
                AND t.create_time = #{createTime}
            </if>

            <if test="updateTime != null and  updateTime != ''   ">
                AND t.update_time = #{updateTime}
            </if>

            <if test="remark != null and  remark != ''   ">
                AND t.remark = #{remark}
            </if>

            <if test="version != null and  version != ''   ">
                AND t.version = #{version}
            </if>

            <if test="userId != null and  userId != ''   ">
                AND t.user_id = #{userId}
            </if>

            <if test="num != null and  num != ''   ">
                AND t.num = #{num}
            </if>

            <if test="type != null   ">
                AND t.type = #{type}
            </if>

            <if test="currencyId != null and  currencyId != ''   ">
                AND t.currency_id = #{currencyId}
            </if>

            <if test="currencyName != null and  currencyName != ''   ">
                AND t.currency_name = #{currencyName}
            </if>
            <if test="date != null and  date != ''   ">
                AND t.date = #{date}
            </if>

            <if test="startCreateTime!=null">
                and t.create_time>#{startCreateTime}
            </if>
            <if test="endCreateTime!=null">
                <![CDATA[and t.create_time<=#{endCreateTime}]]>
            </if>
        </trim>
    </sql>

    <select id="findSumByUserId" parameterType="miningIncomeLogModelDto" resultMap="miningIncomeLogDto">
       select sum(num) as num,currency_id   from t_mining_income_log  where user_id  = #{userId}
        <if test="date!=null">
            and date>=#{date}
        </if>
        group by currency_id
    </select>

</mapper>