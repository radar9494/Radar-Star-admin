<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liuqi.business.mapper.LockWalletMapper">

	<!-- 常用查询 -->
	<sql id="allColumn">
		<trim suffixOverrides=",">
			t.id,t.create_time,t.update_time,t.remark,t.version,t.currency_id,t.user_id,t.locking,t.freeze,
		</trim>
	</sql>

    <!-- 数据库和实体映射  对应数据库实体-->
	<resultMap type="lockWalletModel" id="lockWallet">
		<result property="id" column="id"/>
		<result property="createTime" column="create_time"/>
		<result property="updateTime" column="update_time"/>
		<result property="remark" column="remark"/>
		<result property="version" column="version"/>
		<result property="currencyId" column="currency_id"/>
		<result property="userId" column="user_id"/>
		<result property="locking" column="locking"/>
		<result property="freeze" column="freeze"/>
	</resultMap>

	<!-- dto映射  添加的字段放在这块-->
    <resultMap type="lockWalletModelDto" extends="lockWallet" id="lockWalletDto">
    </resultMap>

	<!-- 新增 -->
	<insert id="insert" keyColumn="id" keyProperty="id" useGeneratedKeys="true" parameterType="lockWalletModel">
		insert into t_lock_wallet(
		<trim  suffixOverrides=",">
				<if test="createTime != null">`create_time`,</if>
				<if test="updateTime != null">`update_time`,</if>
				<if test="remark != null">`remark`,</if>
				<if test="version != null">`version`,</if>
				<if test="currencyId != null">`currency_id`,</if>
				<if test="userId != null">`user_id`,</if>
				<if test="locking != null">`locking`,</if>
				<if test="freeze != null">`freeze`,</if>
		
		</trim>
		) values(
		<trim suffixOverrides=",">
				<if test="createTime != null">#{createTime},</if>
				<if test="updateTime != null">#{updateTime},</if>
				<if test="remark != null">#{remark},</if>
				<if test="version != null">#{version},</if>
				<if test="currencyId != null">#{currencyId},</if>
				<if test="userId != null">#{userId},</if>
				<if test="locking != null">#{locking},</if>
				<if test="freeze != null">#{freeze},</if>
		
		</trim>
		)
	</insert>

	<!-- 更新 -->
	<update id="update" parameterType="lockWalletModel">
		update  t_lock_wallet
		<set>
            <if test="createTime != null">
                    `create_time` = #{createTime},
            </if>
            <if test="updateTime != null">
                    `update_time` = #{updateTime},
            </if>
            <if test="remark != null">
                    `remark` = #{remark},
            </if>
            <if test="version != null">
                    `version` = #{version},
            </if>
            <if test="currencyId != null">
                    `currency_id` = #{currencyId},
            </if>
            <if test="userId != null">
                    `user_id` = #{userId},
            </if>
            <if test="locking != null">
                    `locking` = #{locking},
            </if>
            <if test="freeze != null">
                    `freeze` = #{freeze},
            </if>
		</set>
		where id = #{id}
	</update>

	<update id="modifyWallet">
		update  t_lock_wallet
		set
		`locking` = `locking`+#{changeLocking},
		`freeze` = `freeze`+#{changeFreeze}
		where
		`user_id` = #{userId}
		AND `currency_id` = #{currencyId}
		AND `locking`>=0-#{changeLocking}
		AND `freeze`>=0-#{changeFreeze}
	</update>

	<update id="modifyWalletLocking">
		update  t_lock_wallet
		set
		`locking` = `locking`+#{changeLocking}
		where
		`user_id` = #{userId}
		AND `currency_id` = #{currencyId}
		AND `locking`>=0-#{changeLocking}
	</update>

	<update id="modifyWalletFreeze">
		update  t_lock_wallet
		set
		`freeze` = `freeze`+#{changeFreeze}
		where
		`user_id` = #{userId}
		AND `currency_id` = #{currencyId}
		AND `freeze`>=0-#{changeFreeze}
	</update>


	<!-- 查询 -->
	<select id="getById" resultMap="lockWalletDto">
		select <include refid="allColumn"></include> 
		from  t_lock_wallet t 
		where t.id = #{id}
	</select>
	<!-- 查询 -->
	<select id="getByIds" resultMap="lockWalletDto">
		select <include refid="allColumn"></include> 
		from  t_lock_wallet t 
		where  t.id in
		<foreach collection="list" item="item" open="(" close=")" separator=",">
			#{item}
		</foreach>
	</select>


    <!-- 优化查询count -->
    <select id="queryList_COUNT" parameterType="lockWalletModelDto" resultType="Long">
        select count(t.id)
        <include refid="queryList_base"></include>
    </select>

	<!-- 查询列表 -->
	<select id="queryList" parameterType="lockWalletModelDto" resultMap="lockWalletDto">
		select <include refid="allColumn"></include>
        <include refid="queryList_base"></include>
		<!-- 排序 -->
		<if test="sortName != null and sortName!=''">
			order by t.${sortName}
            <if test="sortType != null and sortType!=''">
                 ${sortType}
            </if>
		</if>
	</select>

    <!-- base基础查询 -->
	<sql id="queryList_base">
        from  t_lock_wallet t
        <trim prefix="where" prefixOverrides="AND|OR">
			<if test="id != null    and id &gt; -2 ">
				AND t.id = #{id}
            </if>
	
			<if test="createTime != null   ">
				AND t.create_time = #{createTime}
            </if>
	
			<if test="updateTime != null   ">
				AND t.update_time = #{updateTime}
            </if>
	
			<if test="remark != null and  remark != ''   ">
				AND t.remark = #{remark}
            </if>
	
			<if test="version != null    and version &gt; -2 ">
				AND t.version = #{version}
            </if>
	
			<if test="currencyId != null    and currencyId &gt; -2 ">
				AND t.currency_id = #{currencyId}
            </if>
	
			<if test="userId != null    and userId &gt; -2 ">
				AND t.user_id = #{userId}
            </if>
	
			<if test="locking != null   ">
				AND t.locking = #{locking}
            </if>
	
			<if test="freeze != null   ">
				AND t.freeze = #{freeze}
            </if>
	
			
            <if test="startCreateTime!=null">
                and t.create_time>#{startCreateTime}
            </if>
            <if test="endCreateTime!=null">
                <![CDATA[and t.create_time<=#{endCreateTime}]]>
            </if>
        </trim>
	</sql>


	<select id="getByUserAndCurrencyId" resultMap="lockWalletDto">
		select <include refid="allColumn"></include> from  t_lock_wallet t where t.user_id = #{userId} AND t.currency_id = #{currencyId}
	</select>

</mapper>